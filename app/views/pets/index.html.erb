<h1>Welcome to Lost Pets!</h1>

<%= link_to 'Report a Pet', new_pet_path, class: 'btn btn-success'  %>

<div class="row justify-content-center">
  <% @pets.each do |pet| %>
    <div class="my-2 mx-1 py-2 col-3 pet-card">
      <h3><%= link_to pet.name, pet_path(pet) %></h3>
      <p><%= pet.address %></p>
      <p><%= pet.species %></p>
      <p><%= pet.found_on %></p>
      <%= link_to 'Delete this pet', 
                  pet_path(pet), 
                  method: :delete,
                  data: { confirm: "Are you sure?" },
                  class: 'btn btn-danger' %> 
    </div>
  <% end %>
</div>